<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/taskFragment">

    <fragment
        android:id="@+id/taskFragment"
        android:name="com.bestway.technologies.todolist.ui.tasks.TaskFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_tasks">
        <argument
            android:name="listItem"
            app:argType="com.bestway.technologies.todolist.data.ListItem"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="untitled" />
        <action
            android:id="@+id/action_taskFragment_to_timePickerFragment"
            app:destination="@id/timePickerFragment" />
        <action
            android:id="@+id/action_taskFragment_to_addEditTaskDialogFragment"
            app:destination="@id/addEditTaskDialogFragment" />
    </fragment>
    <dialog
        android:id="@+id/deleteAllCompletedDialogFragment"
        android:name="com.bestway.technologies.todolist.ui.deleteAllCompleted.DeleteAllCompletedDialogFragment"
        android:label="DeleteAllCompletedDialogFragment" />
    <action
        android:id="@+id/action_global_deleteAllCompletedDialogFragment"
        app:destination="@id/deleteAllCompletedDialogFragment" />
    <dialog
        android:id="@+id/addListItemDialogFragment"
        android:name="com.bestway.technologies.todolist.ui.addlistitem.AddListItemDialogFragment"
        android:label="AddListItemDialogFragment" >
        <action
            android:id="@+id/action_addListItemDialogFragment_to_taskFragment"
            app:destination="@id/taskFragment" />
    </dialog>
    <action android:id="@+id/action_global_addListItemDialogFragment" app:destination="@id/addListItemDialogFragment" />
    <dialog
        android:id="@+id/timePickerFragment"
        android:name="com.bestway.technologies.todolist.ui.timepicker.TimePickerFragment"
        android:label="TimePickerFragment" >
        <argument
            android:name="listItem"
            app:argType="com.bestway.technologies.todolist.data.ListItem"
            app:nullable="true"
            android:defaultValue="@null" />
    </dialog>
    <dialog
        android:id="@+id/addEditTaskDialogFragment"
        android:name="com.bestway.technologies.todolist.ui.addedittask.AddEditTaskDialogFragment"
        android:label="AddEditTaskDialogFragment" >
        <argument
            android:name="task"
            android:defaultValue="@null"
            app:argType="com.bestway.technologies.todolist.data.Task"
            app:nullable="true" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="listId"
            app:argType="integer" />
    </dialog>
    <activity
        android:id="@+id/hilt_ListsDrawerActivity"
        android:name="com.bestway.technologies.todolist.ui.lists.Hilt_ListsDrawerActivity"
        android:label="Hilt_ListsDrawerActivity" />
</navigation>