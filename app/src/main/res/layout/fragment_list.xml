<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.lists.ListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_lists"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/white"
        app:backgroundTint="#2196f3"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end" />

    <TextView
        android:id="@+id/text_view_start_adding_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start by adding a new list"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:fontFamily="sans-serif-medium" />

    <ImageView
        android:id="@+id/image_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_24"
        android:layout_gravity="bottom"
        android:layout_marginBottom="28dp"
        android:visibility="gone"
        android:layout_marginStart="55dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>